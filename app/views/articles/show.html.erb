<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<p><%= @comment.body %></p>
<cite><%= @comment.author %></cite>



<%= form_for [@article, @comment] do |f| %>
  <%= f.label :author %>:
  <%= f.text_field :author %><br>

  <%= f.label :body %>:
  <%= f.text_area :body %><br>

  <%= f.submit %>
<% end %>
